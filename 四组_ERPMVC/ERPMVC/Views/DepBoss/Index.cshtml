@{
    Layout = "~/Views/RSMater.cshtml";
}
@model IEnumerable<ERPMVC.Models.StaffViewModel>
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">
    <title>Carousel Template for Bootstrap</title>
    <!-- Bootstrap core CSS -->
    <link href="~/1/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom styles for this template -->
    <link href="~/Scripts/carousel.css" rel="stylesheet" />
    <script src="~/1/jquery.unobtrusive-ajax.js"></script>
</head>
<body>
    @using (Ajax.BeginForm("bufen1", "Home", new AjaxOptions { UpdateTargetId = "box111" }))
        {
    <h2>
        <lable>员工工号：</lable><input id="Text1" type="text" name="gh" />
        <input id="Submit1" type="submit" value="查询" class="btn btn-primary" />
    </h2>
        }

    <main role="main">

        <div class="container marketing">

            <div id="box111">

                @foreach (var item in Model)
                            {
                                var a = 1;
                                if (a % 2 == 0)
                                {
                        <hr class="featurette-divider">

                        <div class="row featurette">
                            <div class="col-md-7 order-md-2">
                                <h2 class="featurette-heading">@item.StaffName</h2>
                                <p class="lead">@item.Identitycard</p>
                            </div>
                            <div class="col-md-5 order-md-1">
                                <img class="featurette-image img-fluid mx-auto" src="@item.HandImg" alt="Alternate Text" style="width:500px;height:500px" />
                            </div>
                        </div>
                        a++;
                    }
                    else
                    {
                        <hr class="featurette-divider">
                        <div class="row featurette">
                            <div class="col-md-7">
                                <h2 class="featurette-heading">@item.StaffName</h2>
                                <p class="lead">@item.Identitycard</p>
                            </div>
                            <div class="col-md-5">
                                <img class="featurette-image img-fluid mx-auto" src="@item.HandImg" alt="Alternate Text" style="width:500px;height:500px" />
                            </div>
                        </div>
                        a++;
                    }

                }
            </div>

            <!-- /END THE FEATURETTES -->
        </div><!-- /.container -->
        <!-- FOOTER -->
        <footer class="container">
            <ul class="pagination">
                <li><a href="#" onclick="up()">上一页</a></li>
                @for (int i = 1; i <= @ViewBag.count; i++)
                {
                    <li><a href="#" onclick="go(@i)" id="@i">@i</a></li>
                }
                <li><a href="#" onclick="down()">下一页</a></li>
            </ul>
        </footer>
    </main>
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/Scripts/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="~/1/jquery-slim.min.js"><\/script>')</script>
    <script src="~/1/bootstrap.min.js"></script>
    <script src="~/1/popper.min.js"></script>
    <!-- Just to make our placeholder images work. Don't actually copy the next line! -->
    <script src="~/1/holder.min.js"></script>

    <script>
        function up() {
            var a = @ViewBag.page;
            if (a == 1) {
                alert("已经是首页了！");
            } else {
                var b = Number(a) - 1;
                location.href = "/DepBoss/Index?pageindex=" + b;

            }
        }
            function down() {
            var a = @ViewBag.page;
            if (a == @ViewBag.count) {
                alert("已经是尾页了！");
            } else {
                var b = Number(a) + 1;
                location.href = "/DepBoss/Index?pageindex=" + b;

            }
        }

        function go(data)
        {



            location.href = "/DepBoss/Index?pageindex=" + data;
        }
    </script>
</body>
</html>
