    <script>
        window.onload = function () {
            $("#box1").hide();
            $("#box").hide();
        }
        function q() {
            $("#box").show();
        }
        function qq() {
            $("#box").hide();
            var start = $("#TextArea1").val();
            var end = $("#TextArea2").val();
            var rem = $("#TextArea3").val();
            $.ajax({
                data: { "start": start, "end": end, "rem": rem },
                type: "get",
                dataType: "Json",
                url: "/Staff/QJ",
                success: function (data) {
                    if (data > 0) {
                        alert("申请成功！等待领导审核！");
                        $("#TextArea1").text = "";
                        $("#TextArea2").text = "";
                        $("#TextArea3").text = "";
                    } else {
                        alert("申请失败！");
                    }
                }
            })
        }
        function qqq() {
            $("#box1").show();
        }
        function qqqq() {
            $("#box1").hide();
        }

        function guan() {
            $("#box").hide();
        }
    </script>
