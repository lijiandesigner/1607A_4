            <p class="float-right"><a href="#">Back to top</a></p>
            <p>&copy; 2017-2018 Company, Inc. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
        </footer>
    </main>
    <div style="width:680px;height:250px;float:right;background-color:white;margin-top:-50%;margin-left:35%;position:absolute" id="box">
        <lable style="margin-top:10px">请假开始时间：</lable><textarea id="TextArea1" rows="2" cols="20" onclick="WdatePicker()" style="margin-top:10px"></textarea> &nbsp;&nbsp;&nbsp;&nbsp;
        <lable style="margin-top:10px">请假截止时间：</lable> <textarea id="TextArea2" rows="2" cols="20" onclick="WdatePicker()" style="margin-top:10px"></textarea><br /><br /><br />
        <lable style="margin-left:150px">请假原因：</lable> <textarea id="TextArea3" rows="2" cols="20"></textarea>
        <br />
        <input id="Button1" type="button" value="申请" onclick="qq()" style="margin-left:250px" />
        <input id="Button2" type="button" value="取消" onclick="guan()" style="margin-left:10px" />

    </div>
    <div style="width:70%;height:70%;float:right;background-color:red;margin-top:-40%;margin-left:15%;position:absolute" id="box1">
        <input id="Button2" type="button" value="button" onclick="qqqq()" />
    </div>
    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="~/Scripts/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script>window.jQuery || document.write('<script src="~/1/jquery-slim.min.js"><\/script>')</script>
    <script src="~/1/bootstrap.min.js"></script>
    <script src="~/1/popper.min.js"></script>
    <!-- Just to make our placeholder images work. Don't actually copy the next line! -->
    <script src="~/1/holder.min.js"></script>

    <script>
        window.onload = function ()
        {
            $("#box1").hide();
            $("#box").hide();
        }
        function q() {
            $("#box").show();
        }
        function qq() {
            $("#box").hide();
            var start = $("#TextArea1").val();
            var end = $("#TextArea2").val();
            var rem = $("#TextArea3").val();
            $.ajax({
                data: { "start": start, "end": end, "rem": rem },
                type: "get",
                dataType: "Json",
                url: "/Staff/QJ",
                success: function (data)
                {
                    if (data > 0) {
                        alert("申请成功！等待领导审核！");
                        $("#TextArea1").text = "";
                        $("#TextArea2").text = "";
                        $("#TextArea3").text = "";
                    } else
                    {
                        alert("申请失败！");
                    }
                }
            })
        }
        function qqq() {
            $("#box1").show();
        }
        function qqqq() {
            $("#box1").hide();
        }

        function guan()
        {
            $("#box").hide();
        }
    </script>
</body>
</html>




