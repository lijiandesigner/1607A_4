    <main role="main">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">

                    <img class="second-slide" src="~/Image/8501bf32ff0d9d9b74f8b494aebdf31c_t010461c547354fb45f.jpg" = alt="Second slide" onclick="wan()">
     

                </div>
                <div class="carousel-item">
                    <table class="table table-hover" style="color:white">
                        <thead>
                            <tr>
                                <td>员工工号</td>
                                <td>员工姓名</td>
                                <td>打卡日期</td>
                                <td>当日考勤状态</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.KQ)
                            {
                                <tr>
                                    <td>@item.staffs.JobNumber</td>
                                    <td>@item.staffs.StaffName</td>
                                    <td>@item.MorningHours</td>
                                    <td>@item.StaffState</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="container">
                        <div class="carousel-caption">
                            <h1></h1>
                            <p></p>
                            <p><a class="btn btn-lg btn-primary" href="#" role="button">考勤信息表</a></p>
                        </div>
                        <ul class="pagination">
                            <li><a href="#" onclick="up()">上一页</a></li>
                            @for (int i = 1; i <= 3; i++)
                            {
                                <li><a href="#" onclick="go(@i)" id="@i">@i</a></li>
                            }
                            <li><a href="#" onclick="down()">下一页</a></li>
                        </ul>
                    </div>
                </div>
                <div class="carousel-item">
                    <table class="table table-hover" style="color:white">
                        <thead>
                            <tr>
                                <td>员工工号</td>
                                <td>员工姓名</td>
                                <td>请假开始日期</td>
                                <td>请假结束日期</td>
                                <td>请假状态</td>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewBag.qj)
                            {
                                <tr>
                                    <td>@item.staffs.JobNumber</td>
                                    <td>@item.staffs.StaffName</td>
                                    <td>@item.StartTime</td>
                                    <td>@item.EndTime</td>
                                    <td>@item.LeaveState</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="container">
                        <div class="carousel-caption">
                            <h1></h1>
                            <p></p>
                            <p><a class="btn btn-lg btn-primary" href="#" role="button">请假信息表</a></p>
                        </div>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <!-- Marketing messaging and featurettes
        ================================================== -->
        <!-- Wrap the rest of the page in another container to center all the content. -->
        <div class="container marketing">
            <!-- Three columns of text below the carousel -->
            <div class="row">
                <div class="col-lg-4">
                    <img class="rounded-circle" src="~/Image/icon13.gif" alt="Generic placeholder image" width="140" height="140">
